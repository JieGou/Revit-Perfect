<UserControl x:Class="DougKlassen.Revit.SnoopConfigurator.FileOutputPathParameterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DougKlassen.Revit.SnoopConfigurator"
             mc:Ignorable="d"
             x:Name="filePathParameterControl" 
             DataContext="{Binding ElementName=filePathParameterControl}" 
             d:DesignWidth="800" Height="34" Margin="5">
    <DockPanel>
        <Label DockPanel.Dock="Left" Content="{Binding Path=TaskParameter.FriendlyName}"/>
        <Button x:Name="browseButton" DockPanel.Dock="Right" Content="Browse"/>
        <TextBox x:Name="valueTextBlock" Text="{Binding Path=TaskParameter.ParameterValue}"/>
    </DockPanel>
</UserControl>
