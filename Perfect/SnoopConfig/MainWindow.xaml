<Window x:Name="snoopConfiguratorWindow" x:Class="DougKlassen.Revit.SnoopConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DougKlassen.Revit.SnoopConfigurator"
        mc:Ignorable="d"
        Title="Snoop Configurator" Height="798" Width="700" ResizeMode="NoResize"
        DataContext="{Binding ElementName=snoopConfiguratorWindow, Path=Config}">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Height="40" >
            <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="487,10,0,0" VerticalAlignment="Top" Width="74"/>
            <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="584,10,0,0" VerticalAlignment="Top" Width="76"/>
        </Grid>
        <StackPanel VerticalAlignment="Top" Width="100">
            <Label Content="{Binding ConfigFilePath}"/>
        </StackPanel>

    </DockPanel>
</Window>
